@{
    ViewData["Title"] = "Home Page";
}

<style>
    body {
        background-color: #79b999;
         background-image: url('https://w0.peakpx.com/wallpaper/818/148/HD-wallpaper-whatsapp-background-cool-dark-green-new-theme-whatsapp.jpg');
        color: #01070d;
        margin: 0;
    }

    .form-group {
        background-color: #e1eee7;
        padding: 12px;
        border-radius: 10px;
        color: #01070d;
        margin: 0;
    }

    .container {
        display: flex;
        flex-direction: column;
        height: 90vh;
    }

 .panel {
        background-color: #128C7E; 
        background-image: url('https://i.pinimg.com/736x/a7/72/a2/a772a24a69e3deff48d805b534a11b9d.jpg');
        background-size: cover;
        border: 1px solid #25D366; 
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        flex: 1;
        overflow-y: auto;
        padding: 20px;
        margin-bottom: 20px;
    }

    .message-container {
        display: flex;
        flex-direction: column;
        margin-bottom: 10px;
    }

    .message {
        max-width: 80%;
        padding: 10px;
        margin: 5px;
        border-radius: 10px;
        color: #f5e9e9;
    }

    .my-message {
        align-self: flex-start;
        background-color: #1be480;
        color: #f5e9e9;
    }

    .friend-message {
        align-self: flex-start;
        background-color: #68fa68;
        color: #07090c;
        text-align: end;
    }

    .myself-message {
        align-self: flex-start;
        background-color: #68fa68;
        color: #f5f6f8;
    }


    .input-container {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 10px;
        border-top: 1px solid #28a745;
         background-color: #e1eee7;
        border-radius: 0 0 10px 10px;
    }

    .input-box {
        flex: 1;
        margin-right: 10px;
    }

    .send-button {
        background-color: #28a745;
        color: #ffffff;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        cursor: pointer;
    }

    .send-button:hover {
        background-color: #218838;
    }
</style>

<div class="container">
    <div class="panel panel-success">
        <div class="panel-heading">
            <h3 style="color: white;" class="panel-title">Messages</h3>
        </div>

        <div id="divmsg" class="message-container"></div>
    </div>
    <div class="form-group">
        <label for="FriendList">Select Friend:</label>
        <select id="FriendList" name="FriendList" class="form-control"></select>
    </div>
    <div class="input-container">
        <input type="text" name="txtmsg" id="txtmsg" class="input-box" />
        <button type="button" class="send-button" id="btnsend">Send</button>
    </div>

</div>

@section Scripts{
    <script src="~/js/MessageAjax.js" asp-append-version="true"></script>
}
